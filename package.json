{
  "name": "simvibe",
  "version": "0.1.0",
  "private": true,
  "description": "simvi.be - Agentic Market Simulator for Vibe-coders",
  "scripts": {
    "dev": "pnpm --filter @simvibe/web dev",
    "dev:worker": "pnpm --filter @simvibe/worker dev",
    "build": "pnpm --filter @simvibe/web build",
    "worker:start": "pnpm --filter @simvibe/worker start",
    "db:migrate": "pnpm --filter @simvibe/engine db:migrate",
    "personas:validate": "pnpm --filter @simvibe/engine personas:validate",
    "personas:sync": "pnpm --filter @simvibe/engine personas:sync",
    "test:personas": "pnpm --filter @simvibe/engine test:personas",
    "ci:personas": "pnpm personas:validate && pnpm test:personas",
    "smoke": "npx tsx scripts/smoke-test.ts",
    "test:demo": "DEMO_MODE=true npx tsx scripts/test-demo-outputs.ts",
    "ci:smoke": "DEMO_MODE=true DATABASE_URL=memory:// npx tsx scripts/smoke-test.ts",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
