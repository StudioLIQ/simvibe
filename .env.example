# ──────────────────────────────────────────────
# simvi.be Environment Configuration
# ──────────────────────────────────────────────

# LLM Provider Configuration
# Supported: anthropic, openai
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Landing Page Extraction
# Supported: firecrawl, jina
EXTRACTOR_PROVIDER=firecrawl
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
JINA_API_KEY=your_jina_api_key_here

# Database
# Fast local smoke: memory://
# Local dev (SQLite): file:./data/simvibe.db
# Production (Postgres): postgres://user:pass@host:5432/simvibe
# When Postgres is set, pg-boss job queue is auto-enabled
DATABASE_URL=file:./data/simvibe.db

# Application
NODE_ENV=development
PORT=3000

# Worker (apps/worker)
WORKER_PORT=8080
WORKER_RUN_TIMEOUT_MS=600000

# Optional: Chain Receipt (feature-flagged)
ENABLE_CHAIN_RECEIPT=false
CHAIN_RPC_URL=
CHAIN_PRIVATE_KEY=

# Demo Mode (uses cached extracts and stable outputs)
DEMO_MODE=false

# nad.fun Launch Integration (non-custodial, client-side signing)
# When configured, enables direct contract call mode.
# When unconfigured, falls back to deep-link mode.
NAD_TOKEN_FACTORY_ADDRESS=
NAD_CHAIN_ID=
NAD_RPC_URL=
NAD_LAUNCH_FEE_MON=0

# Launch Readiness Gate (env overrides for thresholds)
# LAUNCH_MIN_OVERALL_SCORE=40
# LAUNCH_MAX_UNCERTAINTY=0.7
# LAUNCH_MAX_DISAGREEMENT=0.8
# LAUNCH_MAX_FALLBACK_COUNT=0
# LAUNCH_FORCE_OVERRIDE=false

# ──────────────────────────────────────────────
# Deployment Architecture
# ──────────────────────────────────────────────
# Vercel (FE): apps/web — serves UI + short API calls
#   - DATABASE_URL=postgres://... (same Railway Postgres)
#   - All LLM/Extractor keys
#
# Railway Worker: apps/worker — long-running simulation executor
#   - DATABASE_URL=postgres://... (Railway Postgres, private network)
#   - All LLM/Extractor keys
#   - WORKER_PORT=8080
#
# Railway Postgres: managed database
#   - Shared by Vercel and Worker via DATABASE_URL
